def find_peak_element(nums):
    left, right = 0, len(nums) - 1
    while left < right:
        mid = (left + right) // 2
        if nums[mid] < nums[mid + 1]:
            left = mid + 1
        else:
            right = mid
    return left
 
# Example usage:
nums = [1, 2, 3, 1]
print(find_peak_element(nums)) # Output: 2
